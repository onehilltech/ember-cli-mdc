<th class="mdc-data-table__header-cell
  {{if @numeric "mdc-data-table__header-cell--numeric"}}
  {{if @selectable "mdc-data-table__header-cell--checkbox"}}
  {{if this.sortable "mdc-data-table__header-cell--sortable"}}
  {{if this.sorted "mdc-data-table__header-cell--sorted"}}"
    role="columnheader"
    scope="col" ...attributes
  {{did-insert this.didInsert}}>

  <span class="mdc-data-table__header-cell__content">
    {{#if @selectable}}
      <MdcCheckbox class="mdc-data-table__header-row-checkbox {{if @selected "mdc-checkbox--selected"}}" aria-label={{@label}} />
    {{/if}}

    {{#if this.sortable}}
      <MdcIconButton @icon={{if this.ascending "arrow_upward" "arrow_downward"}} {{on "click" this.sortBy}} />
    {{/if}}

    {{#if (has-block)}}
      {{yield}}
    {{else}}
      {{@label}}
    {{/if}}
  </span>
</th>
