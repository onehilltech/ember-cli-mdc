<h3>Basic Chips</h3>

<h5>Block</h5>

{{#mdc-chip-set}}
  {{mdc-chip text="Chip content"}}
  {{mdc-chip text="Leading icon" iconLeading="event"}}
  {{mdc-chip text="Trailing icon" iconTrailing="cancel"}}

  {{#each dynamicChips as |chip|}}
    {{mdc-chip text=chip.text iconTrailing="cancel"}}
  {{/each}}
{{/mdc-chip-set}}

<form onsubmit={{action "submit"}}>
  {{input value=chipLabel}}

  <button type="submit">Add Chip</button>
</form>

<h5>Inline</h5>

{{mdc-chip-set chips=basicChips}}

<h3>Choice Chips</h3>

{{mdc-choice-chip-set chips=choiceChips value=choice}}

<button {{action (mut choice) "extra_small"}}>Make Extra Small</button>
<button {{action (mut choice) null}}>Clear Choice</button>

<div>Selected Value: {{choice}}</div>

<h3>Filter Chips</h3>

{{mdc-filter-chip-set chips=filterChips value=filtered}}

<ul>
  {{#each names as |id|}}
    <li>{{id}}</li>
  {{/each}}
</ul>

<p>Filter Count: {{filterChips.length}}</p>

<h3>Input Chips</h3>

{{mdc-input-chip-set}}
