<MdcTextfield @style={{@style}}
              @label={{@label}}
              @leadingIcon={{@leadingIcon}}
              @trailingIcon={{if this.showPassword this.visibleIcon this.invisibleIcon}}
              @trailingIconClick={{this.toggle}}
              @errorMessage={{@errorMessage}}
              @helperText={{@helperText}}
              @persistentHelperText={{@persistentHelperText}}
              class="mdc-text-field--password"
              ...attributes
              type={{if this.showPassword "text" "password"}} />