{{#mdc-dialog-container}}
  {{#mdc-dialog-surface}}
    {{#if title}}
      {{#mdc-dialog-title id=(concat elementId "__title")}}{{title}}{{/mdc-dialog-title}}
    {{/if}}

    {{#mdc-dialog-content id=(concat elementId "__content")}}{{yield}}{{/mdc-dialog-content}}

    {{#if hasActions}}
      {{#mdc-dialog-actions}}
        {{#if negativeButton}}
          {{mdc-dialog-button type="button" action=negativeButton.action default=negativeButton.default label=negativeButton.label}}
        {{/if}}

        {{#if positiveButton}}
          {{mdc-dialog-button type="button" action=positiveButton.action default=positiveButton.default label=positiveButton.label}}
        {{/if}}
      {{/mdc-dialog-actions}}
    {{/if}}
  {{/mdc-dialog-surface}}
{{/mdc-dialog-container}}
{{mdc-dialog-scrim}}