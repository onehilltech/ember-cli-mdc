<div class="mdc-dialog" ...attributes
  {{did-insert this.didInsert}}
  {{did-update this.open @open}}>
  <div class="mdc-dialog__container">
    <div class="mdc-dialog__surface"
         role="alertdialog"
         aria-modal="true"
        {{did-insert this.prepareDialogSurface}}>

      {{#if @title}}
        <h2 class="mdc-dialog__title">{{@title}}</h2>
      {{/if}}

      <div class="mdc-dialog__content">
        {{yield to="content"}}
      </div>

      {{#if (has-block "actions")}}
        <div class="mdc-dialog__actions" {{did-insert this.prepareDialogActionButtons}}>
          {{yield to="actions"}}
        </div>
      {{/if}}
    </div>
  </div>
  <div class="mdc-dialog__scrim"></div>
</div>
