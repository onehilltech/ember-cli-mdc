<h2>Line Ripple</h2>

<div class="line-ripple-container">
  <MdcLineRipple @activate={{this.active}} @rippleCenter={{5}} />
</div>

<h3>Using Modifiers</h3>

<div class="line-ripple-container">
  <div {{mdc-line-ripple activate=active}} />
</div>

<div class="line-ripple-container">
  <div {{mdc-line-ripple activate=active rippleCenter=40}} />
</div>

<button {{on "click" this.activate}}>Activate</button>
<button {{on "click" this.deactivate}}>Deactivate</button>