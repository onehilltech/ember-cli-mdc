<h2>Line Ripple</h2>

<h3>Using Mixins</h3>

<div class="line-ripple-container">
  <MdcLineRipple @activate={{true}} />
</div>

<h3>Using Modifiers</h3>

<div class="line-ripple-container">
  <div {{mdc-line-ripple active=active}} />
</div>

<div class="line-ripple-container">
  <div {{mdc-line-ripple active=active rippleCenter=40}} />
</div>

<button {{on "click" this.activate}}>Activate</button>
<button {{on "click" this.deactivate}}>Deactivate</button>