<div class="mdc-speed-dial {{if this.expanded "mdc-speed-dial--expanded"}}" ...attributes>
  {{#if this.expanded}}
    <div class="mdc-speed-dial__actions" {{on "click" this.unexpand}}>
      {{yield}}
    </div>
  {{/if}}

  <MdcFab class="mdc-speed-dial__fab" @icon={{if this.expanded this.closeIcon @icon}} @label={{unless this.expanded @label}} {{on "click" this.expand}} />
</div>
