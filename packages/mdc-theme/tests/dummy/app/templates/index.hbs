<h2>Themes</h2>

<select onchange={{action (mut themeBackground) value="target.value"}}>
  <option value="" selected>Theme Background</option>
  <option value="background">Background</option>
  <option value="primary">Primary</option>
  <option value="secondary">Secondary</option>
</select>

<select onchange={{action (mut themeText) value="target.value"}}>
  <option value="" selected>Theme Text</option>
  <option value="primary">Primary</option>
  <option value="secondary">Secondary</option>
  <option value="onPrimary">On Primary</option>
  <option value="onSecondary">On Secondary</option>
  <option value="onSurface">On Surface</option>
</select>

<select onchange={{action (mut themeTextStyle) value="target.value"}}>
  <option value="" selected>Theme Text Style</option>
  <option value="primary">Primary</option>
  <option value="secondary">Secondary</option>
  <option value="disabled">Disabled</option>
  <option value="hint">Hint</option>
  <option value="icon">Icon</option>
</select>

<select onchange={{action (mut theme) value="target.value"}}>
  <option value="" selected>Theme</option>
  <option value="dark">Dark</option>
  <option value="light">Light</option>
</select>

<h3>Using Mixins</h3>

<MdcDiv @class="demo"
        @themeBackground={{themeBackground}}
        @themeText={{themeText}}
        @themeTextStyle={{themeTextStyle}} @theme={{theme}}>
  THEME
</MdcDiv>

<h3>Using Modifiers</h3>

<div class="demo mdc-theme--background"
  {{mdc-theme "background" themeBackground}}>

  THEME

</div>
